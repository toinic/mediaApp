{% extends 'base.html.twig' %}

{% block title %}Medias{% endblock %}
{% block body %}
  <h1>List of medias</h1>


  <table class="table table-striped text-center">
    <thead>
      <tr>
        <th>#</th>
        <th>Type</th>
        <th>Title</th>
        <th>Author</th>
        <th>Cover</th>
      </tr>
    </thead>
    <tbody>
      {% for media in medias %}
        <tr>
          <td>{{media.id}}</td>
          <td>{{media.type}}</td>
          <td>{{media.title}}</td>
          <td>{{media.author}}</td>
          <td>{{media.cover}}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <a class="btn btn-dark" href="{{path('media_add')}}">Add media</a>
{% endblock %}
